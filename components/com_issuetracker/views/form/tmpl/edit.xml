<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE metadata>
<metadata>
	<layout title="COM_ISSUETRACKER_FORM_VIEW_DEFAULT_TITLE" option="COM_ISSUETRACKER_FORM_VIEW_DEFAULT_OPTION">
